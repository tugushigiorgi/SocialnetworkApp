<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentlayoutofrecycler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="11dp"
    android:layout_marginBottom="11dp"

    android:padding="5dp"

    android:baselineAligned="false"
    android:orientation="vertical"
    >

    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/rounderd_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/feedrecycler_deletebtn"
            android:layout_width="40dp"
            android:layout_height="23dp"
            android:layout_gravity="right"
            android:layout_weight="0"
            android:backgroundTint="#00FFFFFF"
            android:visibility="gone"
            app:srcCompat="@drawable/delete_fill0_wght400_grad0_opsz48" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/feedrecycler_userphoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:minWidth="99dp"
                android:minHeight="99dp"
                android:scaleType="centerCrop"


                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/feedrecycler_userfullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="texview"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/feedrecycler_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="#9FA1B6" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/feedrecycler_postcontent"
                android:layout_width="385dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingLeft="0dp"
                android:text="orem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
                android:textColor="#FFFFFF"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/feedrecycler_imageview"
                android:layout_width="385dp"
                android:layout_height="200dp"
                android:visibility="gone"
                app:srcCompat="@drawable/account_box_fill0_wght400_grad0_opsz48" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:contentDescription="TODO"
                    app:srcCompat="@drawable/comment_fill0_wght400_grad0_opsz48" />

                <TextView
                    android:id="@+id/feedrecycler_commentindicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:paddingBottom="3dp"
                    android:text="Comments"
                    android:textColor="#9EA0B5" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>